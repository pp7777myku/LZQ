# Flask
FLASK_ENV=development
SECRET_KEY=dev-secret

# Database
DATABASE_URL=sqlite:///library.db

# Mail (示例：QQ邮箱 SMTP)
MAIL_ENABLED=true
MAIL_SMTP_HOST=smtp.qq.com
MAIL_SMTP_PORT=465
MAIL_USE_SSL=true
MAIL_USERNAME=你的邮箱@qq.com
MAIL_PASSWORD=你的授权码   # QQ/163/企业邮箱请使用授权码而非登录密码
MAIL_FROM=图书馆催还机器人 <你的邮箱@qq.com>

# 通知设置
NOTIFY_SEND_HOUR=9
TIMEZONE=Asia/Shanghai

# 逾期计算（是否排除周末与法定节假日）
EXCLUDE_WEEKENDS=true
EXCLUDE_HOLIDAYS=true

# 示例节假日（yyyy-mm-dd，逗号分隔）
HOLIDAYS=2025-01-01,2025-02-01,2025-02-02
